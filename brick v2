local Player = game:GetService("Players").LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")
local GUI = {} -- Tabela para armazenar as referências da GUI

-- 2.1. ScreenGui Base
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "WordHub"
ScreenGui.Parent = PlayerGui
GUI.ScreenGui = ScreenGui

-- 2.2. Main Frame (Pequeno e Centralizado)
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 250, 0, 180)
MainFrame.Position = UDim2.new(0.5, -125, 0.5, -90)
MainFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
MainFrame.BorderColor3 = Color3.fromRGB(25, 25, 25)
MainFrame.Active = true -- Permite interações
MainFrame.Draggable = true -- Torna arrastável
MainFrame.Parent = ScreenGui
GUI.MainFrame = MainFrame

-- 2.3. Top Bar (Título e Controles)
local TopBar = Instance.new("Frame")
TopBar.Size = UDim2.new(1, 0, 0, 25)
TopBar.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
TopBar.Parent = MainFrame

local TitleLabel = Instance.new("TextLabel")
TitleLabel.Size = UDim2.new(1, -60, 1, 0)
TitleLabel.Text = "Word Hub"
TitleLabel.TextColor3 = Color3.fromRGB(200, 200, 200)
TitleLabel.Font = Enum.Font.SourceSansBold
TitleLabel.TextSize = 18
TitleLabel.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
TitleLabel.Parent = TopBar

-- 2.4. Botão Fechar (X)
local CloseButton = Instance.new("TextButton")
CloseButton.Size = UDim2.new(0, 30, 1, 0)
CloseButton.Position = UDim2.new(1, -30, 0, 0)
CloseButton.Text = "X"
CloseButton.Font = Enum.Font.SourceSansBold
CloseButton.TextSize = 16
CloseButton.TextColor3 = Color3.fromRGB(255, 100, 100)
CloseButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
CloseButton.Parent = TopBar

CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- 2.5. Botão Minimizar (-)
local MinimizeButton = Instance.new("TextButton")
MinimizeButton.Size = UDim2.new(0, 30, 1, 0)
MinimizeButton.Position = UDim2.new(1, -60, 0, 0)
MinimizeButton.Text = "—" -- Traço longo para minimizar
MinimizeButton.Font = Enum.Font.SourceSansBold
MinimizeButton.TextSize = 16
MinimizeButton.TextColor3 = Color3.fromRGB(100, 255, 100)
MinimizeButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
MinimizeButton.Parent = TopBar
GUI.MinimizeButton = MinimizeButton

MinimizeButton.MouseButton1Click:Connect(function()
    local frameContent = MainFrame.Size.Y.Offset - TopBar.Size.Y.Offset
    if MainFrame.Size.Y.Offset == 180 then
        -- Minimizar
        MainFrame:TweenSize(UDim2.new(0, 250, 0, 25), "Out", "Quad", 0.2, true)
        MinimizeButton.Text = "+"
    else
        -- Maximizar
        MainFrame:TweenSize(UDim2.new(0, 250, 0, 180), "Out", "Quad", 0.2, true)
        MinimizeButton.Text = "—"
    end
end)

-- 2.6. Caixa de Texto para Prefixo
local PrefixTextBox = Instance.new("TextBox")
PrefixTextBox.Size = UDim2.new(0, 210, 0, 30)
PrefixTextBox.Position = UDim2.new(0.5, -105, 0, 40)
PrefixTextBox.PlaceholderText = "Digite o Prefixos (ex: th, le)"
PrefixTextBox.Font = Enum.Font.SourceSans
PrefixTextBox.TextSize = 16
PrefixTextBox.TextColor3 = Color3.fromRGB(255, 255, 255)
PrefixTextBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
PrefixTextBox.Parent = MainFrame
PrefixTextBox.TextXAlignment = Enum.TextXAlignment.Center
GUI.PrefixTextBox = PrefixTextBox

-- 2.7. Label de Resultado
local ResultLabel = Instance.new("TextLabel")
ResultLabel.Size = UDim2.new(0, 210, 0, 30)
ResultLabel.Position = UDim2.new(0.5, -105, 0, 80)
ResultLabel.Text = "Palavra Gerada Aparecerá Aqui"
ResultLabel.Font = Enum.Font.SourceSansBold
ResultLabel.TextSize = 16
ResultLabel.TextColor3 = Color3.fromRGB(255, 255, 150)
ResultLabel.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
ResultLabel.Parent = MainFrame
ResultLabel.TextXAlignment = Enum.TextXAlignment.Center
GUI.ResultLabel = ResultLabel

-- 2.8. Botão Gerar
local GenerateButton = Instance.new("TextButton")
GenerateButton.Size = UDim2.new(0, 100, 0, 30)
GenerateButton.Position = UDim2.new(0.5, -105, 0, 120)
GenerateButton.Text = "GERAR PALAVRA"
GenerateButton.Font = Enum.Font.SourceSans
GenerateButton.TextSize = 16
GenerateButton.TextColor3 = Color3.fromRGB(200, 255, 200)
GenerateButton.BackgroundColor3 = Color3.fromRGB(70, 100, 70)
GenerateButton.Parent = MainFrame

GenerateButton.MouseButton1Click:Connect(function()
    local prefix = PrefixTextBox.Text
    local generatedWord = GenerateWord(prefix)
    
    if generatedWord then
        ResultLabel.Text = generatedWord
        -- Opcional: Limpar a caixa de texto após gerar
        -- PrefixTextBox.Text = "" 
    else
        ResultLabel.Text = string.format("Sem palavras para '%s' ou já usadas!", prefix)
    end
end)

-- 2.9. Botão Reset
local ResetButton = Instance.new("TextButton")
ResetButton.Size = UDim2.new(0, 100, 0, 30)
ResetButton.Position = UDim2.new(0.5, 5, 0, 120)
ResetButton.Text = "RESET"
ResetButton.Font = Enum.Font.SourceSans
ResetButton.TextSize = 16
ResetButton.TextColor3 = Color3.fromRGB(255, 180, 180)
ResetButton.BackgroundColor3 = Color3.fromRGB(100, 70, 70)
ResetButton.Parent = MainFrame

ResetButton.MouseButton1Click:Connect(function()
    ResetGame()
end)

print("Word Hub GUI carregado com sucesso!")
