-- Limpa a lista de palavras usadas, iniciando um novo jogo.
local function ResetGame()
    for k in pairs(USED_WORDS) do
        USED_WORDS[k] = nil
    end
    -- Atualiza a GUI com o status de reset
    if GUI and GUI.MainFrame and GUI.MainFrame.ResultLabel then
        GUI.MainFrame.ResultLabel.Text = "Jogo Resetado. Digite o Prefixo."
    end
end

-- Gera uma palavra aleatória que começa com o prefixo fornecido e que ainda não foi usada.
local function GenerateWord(prefix)
    prefix = tostring(prefix):lower()
    local prefixLength = #prefix
    local availableWords = {}

    -- 1. FILTRAGEM
    for _, word in ipairs(WORD_LIST) do
        local lowerWord = word:lower()
        
        local startsWithPrefix = lowerWord:sub(1, prefixLength) == prefix
        local isUsed = USED_WORDS[lowerWord] == true
        
        if startsWithPrefix and not isUsed then
            table.insert(availableWords, word)
        end
    end

    -- 2. SELEÇÃO E 3. MARCAÇÃO COMO USADA
    if #availableWords > 0 then
        local randomIndex = math.random(1, #availableWords)
        local selectedWord = availableWords[randomIndex]
        
        USED_WORDS[selectedWord:lower()] = true
        
        return selectedWord
    else
        return nil 
    end
end


